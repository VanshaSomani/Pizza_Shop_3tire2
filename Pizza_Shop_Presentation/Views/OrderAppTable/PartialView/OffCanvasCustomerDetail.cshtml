@model Pizza_Shop_Repository.ViewModels.OffCanvasCustomerDetailViewModel
<h3 class="text-primary my-4">Customer Details</h3>
<form method="post" id="CustomerDetailOffCanvasForm">
    <div class="form-floating m-4">
        <input type="hidden" asp-for="@Model.CustomerId">
        <input type="email" class="form-control" id="AssignWaitingCustomerEmail" placeholder="Email"
            asp-for="@Model.Email">
        <label for="AssignWaitigCustomerEmail">Email* </label>
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>
    <div class="form-floating m-4 ">
        <input type="text" class="form-control" id="AssignWaitigCustomerName" asp-for="@Model.CustomerName">
        <label for="AssignWaitigCustomerName">Name* </label>
        <span class="text-danger" asp-validation-for="@Model.CustomerName"></span>
    </div>
    <div class="form-floating m-4 ">
        <input type="text" class="form-control" id="AssignWaitigCustomerMobileNo" asp-for="@Model.Phoneno">
        <label for="AssignWaitigCustomerMobileNo">Mobile Number* </label>
        <span class="text-danger" asp-validation-for="@Model.Phoneno"></span>
    </div>
    <div class="d-flex m-4">
        <div class="form-floating w-50 mx-1">
            <input type="number" class="form-control" id="AssignWaitigCustomerNoOfPerson" asp-for="@Model.NoOfPerson">
            <label for="AssignWaitigCustomerNoOfPerson">Number Of Person* </label>
            <span class="text-danger" asp-validation-for="@Model.NoOfPerson"></span>
        </div>
        <div class="form-floating w-50 mx-1">
            <select class="form-select" id="AssignWaitigCustomerSection" placeholder=""
                aria-label="Floating label select example" asp-for="@Model.SectionId">
                <option selected value="">Select Section</option>
                @foreach (var s in Model.SectionList)
                {
                    <option value="@s.SectionId">@s.SectionName</option>
                }
            </select>
            <label for="AssignWaitigCustomerSection">Section*</label>
            <span class="text-danger" asp-validation-for="@Model.SectionId"></span>
        </div>
    </div>
    <div class="d-flex m-4 p-1 align-item-center justify-content-end">
        <button type="submit" class="btn btn-primary me-2" id="CustomerDetailOffCanvasFormSubmit">Assign</button>
        <button type="button" class="btn bg-white text-primary border border-primary"
            data-bs-dismiss="modal">Cancel</button>
    </div>
</form>