@model Pizza_Shop_Repository.ViewModels.TaxesAndFeesViewModel

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete Tax</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <form id="DeleteTaxForm" method="post">
        <div class="modal-body ps-0 pe-0">
            <div class="d-flex justify-content-center align-item-center"><img
                    src="../images/toppng.com-warning-icon-2400x2400.png" height="50px" alt="">
            </div>
            <div class="d-flex justify-content-center align-item-center">
                <p class="fs-5 mb-1">Are you sure you want to delete this Tax?</p>
            </div>
            <input type="hidden" id="deleteTaxId" asp-for="@Model.TaxId">
        </div>
        <div class="modal-footer">
            <div class="d-flex justify-content-center align-items-center w-100">
                <button type="submit" class="btn btn-primary modal_submit_btn me-2">Save</button>
                <button type="button" class="btn btn-outline-primary modal_close_btn" data-bs-dismiss="modal">
                    Cancel
                </button>
            </div>
        </div>
    </form>
</div>