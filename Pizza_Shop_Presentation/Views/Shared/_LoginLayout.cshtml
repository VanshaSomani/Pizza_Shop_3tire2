<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login Layout</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pizza_Shop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <div class="d-flex flex-row justify-content-center w-100 align-item-center w-100">
        <!-- pizza image -->
        <div class="login-container-card1 p-0">
            <img src="~/images/dominos_background.jpg" class="login-pizza-img" alt="" srcset="">
        </div>
        <!-- login card -->
        <div class="login-container-card2 d-flex align-items-center justify-content-center p-0">
            <div class="col-9 login-form d-flex flex-column p-3 justify-content-center align-item-center ml-3 mr-3">
                <div class="d-flex flex-row justify-content-center align-item-center mb-3">
                    <img src="~/images/logos/pizzashop_logo.png" class="" height="60" alt="" srcset="">
                    <p
                        class="fw-bold m-0 fs-4 d-flex flex-column justify-content-center align-item-center ml-2 form-header">
                        PIZZA SHOP</p>
                </div>
                <main role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>