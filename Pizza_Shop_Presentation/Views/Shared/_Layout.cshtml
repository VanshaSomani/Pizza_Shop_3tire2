@using Newtonsoft.Json
@using Pizza_Shop_Repository.ViewModels
@inject IHttpContextAccessor accessor;
@{
    var json = accessor.HttpContext.Session.GetString("Layout_Page_Permission");
    var userPermission = !string.IsNullOrEmpty(json) ? JsonConvert.DeserializeObject<UserLayoutViewModel>(json) : new UserLayoutViewModel();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizza_Shop_Presentation</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Pizza_Shop_Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="container-fluid body-bgclr-grey">
    <div class="row d-flex flex-row h-100">
        <!-- sidebar -->
        <div class="g-0 p-0 col-xl-2 col-lg-3 w-100 bg-light sidebar-hide">
            <div class="d-flex flex-row ml-2 mt-2 justify-content-start align-items-center p-0">
                <div>
                    <img src="~/images/logos/pizzashop_logo.png" class="" height="50" alt="" srcset="">
                </div>
                <div>
                    <p
                        class="fw-bold m-0 fs-6 d-flex flex-column justify-content-center align-item-center ml-2 form-header">
                        PIZZA SHOP</p>
                </div>
            </div>
            <ul class="nav-nav sidebar-list p-0 mt-2 pt-1 m-0 w-100">
                <li class="nav-item mb-2 ">
                    <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                        asp-controller="Dashboard" asp-action="Dashboard" id="Dashboard-Sidebar">
                        <div class="d-flex justify-content-center align-items-center">
                            <img src="~/images/dashboard.png" height="30px" class="" alt="">
                        </div>
                        <p class="sidebar-name pl-2 fw-6 text-dark m-0 d-flex  align-items-center">Dashboard</p>
                    </a>
                </li>
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "Users" && p.Viewpermission)){
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="User" asp-action="UserList" id="User-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/UsersIcon.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Users</span>
                        </a>
                    </li>
                }
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "RoleAndPermission" && p.Viewpermission)){
                    <li class="nav-item fs-6  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="RoleAndPermission" asp-action="RoleList" id="RoleAndPermission-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/RolePermission.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Roles and
                                Permission</span>
                        </a>
                    </li>
                }
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "Menu" && p.Viewpermission)){
                    <li class="nav-item fs-6  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="Menu" asp-action="MenuItems" id="MenuItems-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/Menu.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2 fw-6 text-dark m-0 d-flex  align-items-center">Menu</span>
                        </a>
                    </li>
                }
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "TableAndSection" && p.Viewpermission)){
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="TableAndSection" asp-action="TableSection" id="TableAndSection-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/TableSection.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2 fw-6 text-dark m-0 d-flex  align-items-center">Table and
                                Section</span>
                        </a>
                    </li>
                }
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "TaxAndFee" && p.Viewpermission)){
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="TaxesAndFees" asp-action="TaxFees" id="TaxesAndFees-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/tax.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Taxes and
                                Fees</span>
                        </a>
                    </li>
                }
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "Order" && p.Viewpermission)){
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="Orders" asp-action="Order" id="Orders-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/notepad.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Order</span>
                        </a>
                    </li>
                }
                @if(userPermission.UserPageViewList.Any(p => p.PermissionName == "Customer" && p.Viewpermission)){
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-anchor sidebar-hover"
                            asp-controller="Customers" asp-action="Customer" id="Customer-Sidebar">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="~/images/customer.png" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Customer</span>
                        </a>
                    </li>
                }
            </ul>
        </div>
        <!-- offcanvas sidebar -->
        <div class="offcanvas offcanvas-start g-0 p-0 bg-light " tabindex="-1" id="offcanvasExample"
            aria-labelledby="offcanvasExampleLabel">
            <div class="g-0 p-0 w-30 bg-light ">
                <div class="d-flex flex-row ml-2 mt-2 justify-content-between align-items-center p-0">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        <div>
                            <img src="./images/logos/pizzashop_logo.png" class="" height="50" alt="" srcset="">
                        </div>
                        <div>
                            <p
                                class="fw-bold m-0 fs-6 d-flex flex-column justify-content-center align-item-center ml-2 form-header">
                                PIZZA SHOP</p>
                        </div>
                    </div>
                    <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas"
                        data-bs-target="#offcanvasExample" aria-controls="offcanvasExample">
                        <i class="fa-solid fa-xmark"></i>
                    </button>
                </div>
                <ul class="nav-nav sidebar-list p-0 mt-2 pt-1 m-0 w-100">
                    <li class="nav-item mb-2 ">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <p class="sidebar-name pl-2 fw-6 text-dark m-0 d-flex  align-items-center">Dashboard</p>
                        </a>
                    </li>
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover active-sidebar"
                            asp-controller="User" asp-action="UserList">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Users</span>
                        </a>
                    </li>
                    <li class="nav-item fs-6  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="./permissionAndRole.html">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Roles and
                                Permission</span>
                        </a>
                    </li>
                    <li class="nav-item fs-6  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="./menuItems.html">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2 fw-6 text-dark m-0 d-flex  align-items-center">Menu</span>
                        </a>
                    </li>
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="#">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2 fw-6 text-dark m-0 d-flex  align-items-center">Taxes and
                                Section</span>
                        </a>
                    </li>
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="#">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Taxes and
                                Fees</span>
                        </a>
                    </li>
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1 pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="#">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Order</span>
                        </a>
                    </li>
                    <li class="nav-item  mb-2">
                        <a class="nav-link p-1  pl-3 d-flex flex-row justify-content-start align-item-center sidebar-hover"
                            href="#">
                            <div class="d-flex justify-content-center align-items-center">
                                <img src="./images/dashboard-default.svg" height="30px" class="" alt="">
                            </div>
                            <span
                                class="sidebar-name pl-2  fw-6 text-dark m-0 d-flex  align-items-center">Customer</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- main -->
        <div class="col-xl-10 col-lg-9 p-0 g-0 content-div">
            <!-- navbar -->
            <div class="col-12 g-0 bg-primary p-1">
                <div class="d-flex flex-row justify-content-between navbar align-items-center p-1">
                    <!-- offcanvas toggle btn -->
                    <div>
                        <div class="sidebar-toggle-btn">
                            <a class="btn btn-primary d-flex justify-content-center align-items-center "
                                data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                                aria-controls="offcanvasExample">
                                <i class="fa-solid fa-bars fs-2"></i>
                            </a>
                        </div>
                    </div>
                    @* <div class="">
                    <img src="~/images/Default_pfp.svg.png" height="40" alt="">
                    </div> *@
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        @if(User.IsInRole("accountmanager") || User.IsInRole("chef")){
                            <div class="mr-4">
                                <a asp-action="KOT" asp-controller="OrderAppKOT">
                                    <i class="fa-solid fa-mobile-screen-button text-white fs-3"></i>
                                </a>
                            </div>
                        }
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle p-0" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <img src="~/ProfileImages/@accessor.HttpContext.Session.GetString("ProfileImg")" height="40" alt="" style="border-radius: 50%; aspect-ratio: 1;">
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="d-flex flex-column align-items-center" style="border-bottom: 1px solid rgb(102, 102, 102);">
                                    <img src="~/ProfileImages/@accessor.HttpContext.Session.GetString("ProfileImg")" height="40" alt="" style="border-radius: 50%; aspect-ratio: 1;"></br>
                                    <p class="text-dark fs-5" style="margin-top: -1em;">
                                        @accessor.HttpContext.Session.GetString("UserName")
                                    </p>
                                </li>
                                <li><a class="dropdown-item" type="button" asp-controller="User"
                                        asp-action="UserProfile">Change Profile</a></li>
                                <li><a class="dropdown-item" type="button" asp-action="ChangePassword" asp-controller="User">My Password</a></li>
                                <li><a class="dropdown-item" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- dasboard -->
            <div class="p-0 justify-content-center p-3 g-2">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @* logout modal *@
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column align-items-center">
                    <img src="../images/toppng.com-warning-icon-2400x2400.png" height="50px" alt="" />
                    <div class="h5">
                        Are you sure you want to logout?
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center align-items-center w-100">
                        <a type="button" class="btn btn-primary  modal_submit_btn me-2" asp-action="Logout" asp-controller="UserLogin">Yes</a>
                        <button type="button" class="btn btn-outline-primary modal_close_btn" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


