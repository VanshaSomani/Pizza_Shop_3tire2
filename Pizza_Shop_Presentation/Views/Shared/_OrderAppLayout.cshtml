@inject IHttpContextAccessor accessor;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pizza_Shop_Presentation</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
    <link rel="stylesheet" href="~/Pizza_Shop_Presentation.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="container-fluid body-bgclr-grey">
    
    <div class="row d-flex flex-row">
        <!-- main -->
        <div class="col-12 p-0 g-0 content-div">
            <!-- navbar -->
            <div class="col-12 g-0 bg-primary p-1">
                <div class="d-flex flex-row justify-content-between navbar align-items-center p-1">
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        <a class="bg-white me-2" asp-controller="Dashboard" asp-action="Dashboard">
                            <img src="~/images/logos/pizzashop_logo.png" class="kot-pizza-logo" height="40px" alt="">
                        </a>
                        <div>
                            <span class="fs-5 kot-pizza-header text-white" style="font-weight: 5em;">PIZZASHOP</span>
                        </div>
                    </div>
                    <div class="d-flex flex-row justify-content-center align-items-center">
                        <a class="d-flex flex-column justify-content-center align-items-center me-3 navbar-badges-container" asp-action="KOT" asp-controller="OrderAppKOT" id="OrderAppKOTBadge">
                            <span
                                class="badge badge-pill badge-primary border border-white p-2 pl-3 pr-3 fs-6 navbar-badges"><i class="fa-solid fa-clipboard badge-icon me-1"></i>KOT</span>
                        </a>
                        <a class="d-flex flex-row justify-content-center align-items-center me-3 navbar-badges-container" asp-action="OrderWaitingList" asp-controller="OrderAppWaitingList" id="OrderAppWaitingListBadge">
                            <span
                                class="badge badge-pill badge-primary border border-white p-2 pl-3 pr-3 fs-6 navbar-badges"><i class="fa-solid fa-clock badge-icon me-1"></i>Waiting List</span>
                        </a>
                        <a class="d-flex flex-row justify-content-center align-items-center me-3 navbar-badges-container" asp-action="OrderTable" asp-controller="OrderAppTable" id="OrderAppTableBadge">
                            <span
                                class="badge badge-pill badge-primary border border-white p-2 pl-3 pr-3 fs-6 navbar-badges"><i class="fa-solid fa-square badge-icon me-1"></i>Table</span>
                        </a>
                        <a class="d-flex flex-row justify-content-center align-items-center me-3 navbar-badges-container" asp-action="OrderMenu" asp-controller="OrderAppMenu" id="OrderAppMenuBadge">
                            <span
                                class="badge badge-pill badge-primary border border-white p-2 pl-3 pr-3 fs-6 navbar-badges"><i class="fa-solid fa-bell-concierge badge-icon me-1"></i>Menu</span>
                        </a>
                        <div class="btn-group d-none kot-nav-options">
                            <button type="button" class="btn dropdown-toggle p-0" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <img src="~/images/logos/pizzashop_logo.png" height="40px" alt="" class="kot-pizza-logo" style="border-radius: 50%; aspect-ratio: 1;">
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-width" style="width: 30vw !important;">
                                <li>
                                    <div class="form-check" style="margin-left: 1em;">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="KotDropDown">
                                        <label class="form-check-label" for="KotDropDown">
                                            <i class="fa-solid fa-clipboard me-1"></i>KOT
                                        </label>
                                      </div>
                                </li>
                                <li>
                                    <div class="form-check" style="margin-left: 1em;">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="WaitinDropDowm">
                                        <label class="form-check-label" for="WaitinDropDowm">
                                            <i class="fa-solid fa-clock me-1"></i>Waiting List
                                        </label>
                                      </div>
                                </li>
                                <li>
                                    <div class="form-check" style="margin-left: 1em;">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="TableDropDowm">
                                        <label class="form-check-label" for="TableDropDowm">
                                            <i class="fa-solid fa-square me-1"></i>Table
                                        </label>
                                      </div>
                                </li>
                                <li>
                                    <div class="form-check" style="margin-left: 1em;">
                                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="MenuDropDowm">
                                        <label class="form-check-label" for="MenuDropDowm">
                                            <i class="fa-solid fa-bell-concierge me-1"></i>Menu
                                        </label>
                                      </div>
                                </li>
                            </ul>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn dropdown-toggle p-0" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <img src="~/ProfileImages/@accessor.HttpContext.Session.GetString("ProfileImg")" height="40" alt="" style="border-radius: 50%; aspect-ratio: 1;">
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-width">
                                <li class="d-flex flex-column align-items-center"
                                    style="border-bottom: 1px solid rgb(102, 102, 102);">
                                    <img src="~/ProfileImages/@accessor.HttpContext.Session.GetString("ProfileImg")" height="40" alt="" style="border-radius: 50%; aspect-ratio: 1;"></br>
                                    <p class="text-dark fs-5" style="margin-top: -1em;">
                                        @accessor.HttpContext.Session.GetString("UserName")
                                    </p>
                                </li>
                                @* <li><a class="dropdown-item" type="button" asp-controller="User"
                                        asp-action="UserProfile">Change Profile</a></li>
                                <li><a class="dropdown-item" type="button" asp-action="ChangePassword"
                                        asp-controller="User">My Password</a></li> *@
                                <li><a class="dropdown-item" type="button" data-bs-toggle="modal"
                                        data-bs-target="#exampleModal">Logout</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- dasboard -->
            <div class="p-0 justify-content-center g-2">
                <main role="main" class="">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    @* logout modal *@
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Logout</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex flex-column align-items-center">
                    <img src="../images/toppng.com-warning-icon-2400x2400.png" height="50px" alt="" />
                    <div class="h5">
                        Are you sure you want to logout?
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="d-flex justify-content-center align-items-center w-100">
                        <a type="button" class="btn btn-primary  modal_submit_btn me-2" asp-action="Logout" asp-controller="UserLogin">Yes</a>
                        <button type="button" class="btn btn-outline-primary modal_close_btn" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
<!-- Notyf JS -->
<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
<script>
    let notyf = new Notyf();
</script>
</html>
