@model Pizza_Shop_Repository.ViewModels.OrderAppMenuViewModel
<div class="pt-4  d-flex flex-column align-items-start justify-content-center">
    <div class="fs-4 fw-bold ps-4 pe-4 mb-3" data-customerid="@Model.CustomerId">
        Category
    </div>
    <div class="ps-4 pe-4 mb-2 text-secondary sidebar_category fs-5 menu_sidebar_hover w-100 pb-1" data-categoryid="-2" data-customerid="@Model.CustomerId">
        Favorite Items
    </div>
    <div class="ps-4 pe-4 mb-2 text-secondary fs-5 sidebar_category menu_sidebar_hover menu_sidebar_active w-100 pb-1" id="-1" data-categoryid="-1" data-customerid="@Model.CustomerId">
        All
    </div>
    @foreach(var c in Model.OrderMenuCategorieList){
        <div class="ps-4 pe-4 mb-2 text-secondary fs-5 sidebar_category menu_sidebar_hover w-100 pb-1" id="@c.CategoryID" data-categoryid="@c.CategoryID"data-customerid="@Model.CustomerId">
            @c.CategoryName
        </div>
    }
</div>