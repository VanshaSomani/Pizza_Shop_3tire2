@model Pizza_Shop_Repository.ViewModels.AddUserViewModel;
@{
    ViewData["Title"] = "AddUser";
}
<div class="p-2 pl-3 pr-3">
    <!-- header -->
    <div class="col-12 p-2 user-list-container d-flex flex-row justify-content-between">
        <div class="h3 fw-bold text-primary">Add New User</div>
        <div class="d-flex flex-row justify-content-center align-item-center">
            <div>
                <a class="btn btn-white border border-primary text-primary" asp-controller="User"
                    asp-action="UserList"><i class="fa-solid fa-chevron-left mr-2"></i>Back</a>
            </div>
        </div>
    </div>
    <!-- form -->
    <div class="col-12 p-2 user-list-container">
        <div class="shadow p-3 mb-5 bg-white rounded">
            <div class="bg-white d-flex justify-content-end p-2">
                <div class="container-fluid">
                    <form asp-action="AddUser" asp-controller="User" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="First Name"
                                        asp-for="@Model.Firstname">
                                    <label for="floatingInput">First Name</label>
                                    <span class="text-danger" asp-validation-for="Firstname"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Last Name"
                                        asp-for="@Model.Lastname">
                                    <label for="floatingInput">Last Name</label>
                                    <span class="text-danger" asp-validation-for="Lastname"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="User Name"
                                        asp-for="@Model.Username">
                                    <label for="floatingInput">User Name</label>
                                    <span class="text-danger" asp-validation-for="Username"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-floating mb-3">
                                    <select type="text" class="form-select" id="floatingSelect" aria-label="Role"
                                        asp-items="ViewBag.Roles" asp-for="@Model.Roleid" required>
                                        <option selected value="">select role</option>
                                    </select>
                                    <label for="floatingInput">Role</label>
                                    <span class="text-danger" asp-validation-for="Roleid"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-floating mb-3">
                                    <input type="email" class="form-control" id="floatingInput" placeholder="Email"
                                        asp-for="@Model.Email">
                                    <label for="floatingInput">Email</label>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="pass1"
                                        aria-describedby="passwordHelp" placeholder="Password"
                                        asp-for="@Model.Passwordhashed">
                                    <span class="input-countainer-icon"><i id="pass-icon1" class="fa-solid fa-eye-slash"
                                            onclick="showPassword('pass1','pass-icon1')"
                                            style="margin-top: 1em;"></i></span>
                                    @* <input type="password" class="form-control" id="pass1" placeholder="Password"
                                    asp-for="@Model.Passwordhashed"> *@
                                    <label for="floatingInput">Password</label>
                                    <span class="text-danger" asp-validation-for="Passwordhashed"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="upload-file" class="file-upload w-100">
                                        <div class="d-flex flex-column justify-content-center align-items-center">
                                            <i class="fa-solid fa-cloud-arrow-up fs-3" id="add-user-file-upload"></i>
                                            <span id="add-user-drag-drop">Browse</span>
                                            <img src="" alt="" srcset="" height="40px" id="add-user-img-preview" style="display: none;">
                                            <span id="Add-User-Img-Name"></span>
                                        </div>
                                    </label>
                                    <input type="file" class="d-none" id="upload-file" asp-for="@Model.profileimg">
                                    <span class="text-danger" asp-validation-for="profileimg"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                <div class="form-floating mb-3">
                                    <select type="text" class="form-select" id="CountryDropDown" aria-label="Country"
                                        asp-items="ViewBag.Countries" asp-for="@Model.Countryid" required>
                                        <option selected value="">select country</option>
                                    </select>
                                    <label for="floatingInput">Country</label>
                                    <span class="text-danger" asp-validation-for="Countryid"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="form-floating mb-3 ">
                                    <select type="text" class="form-select" id="StateDropDown" aria-label="State"
                                        asp-for="@Model.Stateid" required>
                                        <option selected value="">select state</option>
                                    </select>
                                    <label for="floatingInput">State</label>
                                    <span class="text-danger" asp-validation-for="Stateid"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <div class="form-floating mb-3 ">
                                    <select type="text" class="form-select" id="CityDropDown" aria-label="City"
                                        asp-for="@Model.Cityid" required>
                                        <option selected value="">select city</option>
                                    </select>
                                    <label for="floatingInput">City</label>
                                    <span class="text-danger" asp-validation-for="Cityid"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Zipcode"
                                        asp-for="@Model.Zipcode">
                                    <label for="floatingInput">Zipcode</label>
                                    <span class="text-danger" asp-validation-for="Zipcode"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <div class="form-floating mb-3">
                                    <input type="text" class="form-control" id="floatingInput" placeholder="Address"
                                        asp-for="@Model.Address">
                                    <label for="floatingInput">Address</label>
                                    <span class="text-danger" asp-validation-for="Address"></span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-12">
                                <div class="form-floating mb-3">
                                    <input type="tel" class="form-control" id="floatingInput" placeholder="Phone"
                                        asp-for="@Model.Phoneno">
                                    <label for="floatingInput">Phone</label>
                                    <span class="text-danger" asp-validation-for="Phoneno"></span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-row">
                            <button type="submit" class="btn btn-primary rounded text-white mr-3">Create
                                User</button>
                            <a asp-controller="User" asp-action="UserList"
                                class="btn btn-outline-primary rounded">Cancle</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
@section Scripts {
    <script src="~/js/AddUser.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}